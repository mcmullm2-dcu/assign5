<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <TextView
    android:id="@+id/welcome"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hello World!"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <de.hdodenhof.circleimageview.CircleImageView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_image"
    android:layout_width="@dimen/profile_image"
    android:layout_height="@dimen/profile_image"
    app:layout_constraintTop_toBottomOf="@id/welcome"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    />

  <Button
    android:id="@+id/launch_procedure"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="View Procedure"
    android:layout_marginTop="@dimen/spacing_med"
    app:layout_constraintTop_toBottomOf="@id/profile_image"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:onClick="launchProcedure"/>

  <Button
    android:id="@+id/launch_qr_code"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Scan QR Code"
    android:layout_marginTop="@dimen/spacing_med"
    app:layout_constraintTop_toBottomOf="@id/launch_procedure"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:onClick="TakePhoto"/>

</android.support.constraint.ConstraintLayout>