<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Link the main colours to those defined in colors.xml -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <!-- Changes the size of the logo on the login screen -->
  <style name="FirebaseUI.AuthMethodPicker.Logo">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:scaleX">4</item>
    <item name="android:scaleY">4</item>
    <item name="android:layout_gravity">center</item>
  </style>

  <!-- Alternative style for activities using Toolbars -->
  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="Base.ThemeOverlay.AppCompat.Light" />

  <!-- Section Headings -->
  <style name="AppTheme.SectionHeading">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/colorPrimary</item>
    <item name="android:textSize">@dimen/font_edit_text</item>
  </style>

  <!-- Form Headings -->
  <style name="AppTheme.FormLabel">
    <item name="android:textSize">@dimen/font_edit_text</item>
  </style>
</resources>
