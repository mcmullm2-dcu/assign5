<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Link the main colours to those defined in colors.xml -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <!-- Changes the size of the logo on the login screen -->
  <style name="FirebaseUI.AuthMethodPicker.Logo">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:scaleX">4</item>
    <item name="android:scaleY">4</item>
    <item name="android:layout_gravity">center</item>
  </style>
</resources>
